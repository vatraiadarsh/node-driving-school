<% include ../shared/header.ejs %>
      <section>
         <!-- Page content-->
         <div class="content-wrapper">
            <h3>Courses
               <small>All courses</small>
            </h3>
            <div class="row">
              <div class="pull-right">
                <a href="/studentspayments/create" class="btn btn-md btn-primary">
                  <i class="fa fa-plus"></i> Add Courses
                </a>
              </div>
              <div class="col-md-12">
                <table class="table table-responsive table-hover">
                  <thead>
                    <tr>
                        <th>ID</th>
                        <th>Student Name</th>
                        <th>Payment</th>
                        <th>Created Date</th>
                        <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for(i=data.length - 1; i >= 0; i--) { %>
                      <tr>
                        <td><%= i+1 %></td>
                        <td><%= data[i].person_name %> (<%= data[i]._id %>)</td>
                        <td>
                          <% if(data[i].details.length > 0) {
                            for(var j=data[i].details.length -1; j>=0; j--) { %>
                              <li class="list-group-item"><%= data[i].details[j].person_name %> <a class="ajaxClick" href="delete/symptoms/<%= data[i].details[j]._id %>">Delete</a></li>
                            <% } } else { %>
                              <li class="list-group-item">No payment Found</li>
                          <% } %>
                        </td>
                        <td><%= data[i].date %></td>
                        <td>
                          [<a href="create/<%= data[i]._id %>">Create</a>]
                          [<a href="delete/<%= data[i]._id %>" class="ajaxClick">Delete</a>]
                        </td>
                      </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
         </div>
      </section>
      <!-- Page footer-->
<% include ../shared/footer.ejs %>
